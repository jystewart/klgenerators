<h2>Sign up</h2>

<%= semantic_form_for(resource, :url => registration_path(resource_name)) do |form| %>
  <%= form.error_messages :header_message => 'There was an error' %>

  <%= form.inputs :email, :password, :password_confirmation %>
  
  <%= form.buttons do %>
    <%= form.commit_button "Sign up" %>
  <% end %>

<% end %>

<%= render :partial => "devise/shared/links" %>
